<% if session[:error] %>
  <div id="error" class="msg"><%= session.delete(:error) %></div>
<% elsif session[:success] %>
  <div id="success" class="msg"><%= session.delete(:success) %></div>
<% end %>

<form class="signin" action="/users/signin" method="post">
  <div>
    <label for="username">Username:</label>
    <input placeholder="<%= @username || "Your username" %>" name="username"/>
  </div>
  <div>
    <label for="password">Password:</label>
    <input name="password"/>
  </div>
  <input type="submit" value="Sign in"/>
</form>